<h1>Student Form</h1>

<% if flash[:messages] %>
  <ul>
    <% flash[:messages].each do |message|  %>
      <li><%= message %></li>
    <% end  %>
  </ul>
<% end  %>

<%= form_tag students_path do %>
  <label>First Name:</label><br>
  <%= text_field_tag :'first_name' %><br>
<!--  <%#= text_field_tag :'student[first_name]' %><br>-->

  <label>Last Name:</label><br>
  <%= text_area_tag :'last_name' %><br>
<!--  <%#= text_area_tag :'student[last_name]' %><br>-->

  <%= submit_tag "Submit Student" %>
<% end %>

